boy =input("Как тебя зовут(для мужчин)?\nОтвет:")
b = int(input("Твой рост?\nОтвет:"))
a = (b - 100) * 1.15
print(boy, ",", "твой идеальный вес -", a, "килограмм" )

girl =input("Как тебя зовут(для женщин)?\nОтвет:")
c = int(input("Твой рост?\nОтвет:"))
d = (c - 110) * 1.15
print(girl, ",", "твой идеальный вес -", d, "килограмм" )

